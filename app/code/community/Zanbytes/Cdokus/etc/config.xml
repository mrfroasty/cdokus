<config>
    <modules>
        <Zanbytes_Cdokus>
            <version>0.0.0.7</version>
        </Zanbytes_Cdokus>
    </modules>
    <frontend>
        <routers>
            <cdokus>
                <use>standard</use>
                <args>
                    <module>Zanbytes_Cdokus</module>
                    <frontName>cdokus</frontName>
                </args>
            </cdokus>
        </routers>
        <layout>
            <updates>
                <cdokus>
                    <file>cdokus.xml</file>
                </cdokus>
            </updates>
        </layout>
        <translate>
            <modules>
                <Zanbytes_Cdokus>
                    <files>
                        <default>Zanbytes_Cdokus.csv</default>
                    </files>
                </Zanbytes_Cdokus>
            </modules>
        </translate>
    </frontend>
    <global>
        <models>
            <cdokus>
                <class>Zanbytes_Cdokus_Model</class>
                <resourceModel>cdokus_resource</resourceModel>
            </cdokus>
            <cdokus_resource>
                <class>Zanbytes_Cdokus_Model_Resource</class>
                <entities>
                    <links>
                        <table>zanbytes_cdokus</table>
                    </links>
                </entities>
            </cdokus_resource>
        </models>
        <resources>
            <cdokus_setup>
                <setup>
                    <module>Zanbytes_Cdokus</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </cdokus_setup>
            <cdokus_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </cdokus_write>
            <cdokus_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </cdokus_read>
        </resources>
        <helpers>
            <cdokus>
                <class>Zanbytes_Cdokus_Helper</class>
            </cdokus>
        </helpers>
        <blocks>
            <cdokus>
                <class>Zanbytes_Cdokus_Block</class>
            </cdokus>
        </blocks>
    </global>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Zanbytes_Cdokus before="Mage_Adminhtml">Zanbytes_Cdokus_Adminhtml</Zanbytes_Cdokus>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <!--
                <events>
                    <admin_system_config_changed_section_cdokus>
                        <observers>
                            <admin_system_config_changed_section_cdokus>
                                <type>model</type>
                                <class>cdokus/link</class>
                                <method>execute</method>
                            </admin_system_config_changed_section_cdokus>
                        </observers>
                    </admin_system_config_changed_section_cdokus>
                    <catalog_product_cdokus_upload_document_after>
                        <observers>
                            <catalog_product_cdokus_upload_document_after_cdokus>
                                <type>model</type>
                                <class>cdokus/link</class>
                                <method>execute</method>
                            </catalog_product_cdokus_upload_document_after_cdokus>
                        </observers>
                    </catalog_product_cdokus_upload_document_after>
                </events>
        -->
        <layout>
            <updates>
                <cdokus>
                    <file>cdokus.xml</file>
                </cdokus>
            </updates>
        </layout>
        <translate>
            <modules>
                <Zanbytes_Cdokus>
                    <files>
                        <default>Zanbytes_Cdokus.csv</default>
                    </files>
                </Zanbytes_Cdokus>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <cdokus>
                                            <title>Cdokus Configuration Panel</title>
                                        </cdokus>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <cdokus>
            <general>
                <allow_guest>1</allow_guest>
                <allowed_file_extension>pdf,txt,doc,docx</allowed_file_extension>
                <allow_file_dispersion>1</allow_file_dispersion>
                <allow_file_rename>1</allow_file_rename>
            </general>
        </cdokus>
    </default>
</config>